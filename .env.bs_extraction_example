# Example .env configuration for BeautifulSoup extraction

# ========================================
# BeautifulSoup Extraction Configuration
# ========================================

# Master switch: enable BS extraction for Transfermarkt
# Default: false (use LLM for everything - backwards compatible)
USE_BS_EXTRACTORS=false

# Fallback to LLM if BS extraction fails
# Default: true (recommended during migration)
BS_FALLBACK_TO_LLM=true

# Comma-separated list of page types to use BS for
# Options: player_profile, player_transfers, club_transfers, club_profile
# Empty = use for all page types (if USE_BS_EXTRACTORS=true)
# Default: "" (all)
USE_BS_EXTRACTORS_FOR=""

# Enable LLM validation (non-blocking)
# Default: true (recommended)
ENABLE_LLM_VALIDATION=true

# Make LLM validation blocking (not recommended)
# Default: false
LLM_VALIDATION_BLOCKING=false


# ========================================
# Example Migration Configurations
# ========================================

# PHASE 1: Testing club transfers only
# USE_BS_EXTRACTORS=true
# USE_BS_EXTRACTORS_FOR="club_transfers"
# BS_FALLBACK_TO_LLM=true
# ENABLE_LLM_VALIDATION=true

# PHASE 2: Add player profiles
# USE_BS_EXTRACTORS=true
# USE_BS_EXTRACTORS_FOR="club_transfers,player_profile"
# BS_FALLBACK_TO_LLM=true
# ENABLE_LLM_VALIDATION=true

# PHASE 3: All page types
# USE_BS_EXTRACTORS=true
# USE_BS_EXTRACTORS_FOR=""
# BS_FALLBACK_TO_LLM=true
# ENABLE_LLM_VALIDATION=true

# PHASE 4: BS only (no fallback)
# USE_BS_EXTRACTORS=true
# USE_BS_EXTRACTORS_FOR=""
# BS_FALLBACK_TO_LLM=false
# ENABLE_LLM_VALIDATION=true

# PHASE 5: BS only, validation disabled (max cost savings)
# USE_BS_EXTRACTORS=true
# USE_BS_EXTRACTORS_FOR=""
# BS_FALLBACK_TO_LLM=false
# ENABLE_LLM_VALIDATION=false
